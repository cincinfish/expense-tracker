<div class="row align-items-center col-6 mx-auto mt-5">
  <form action="/record" method="POST">
    <div class="row mb-3">
      <div class="col-sm-2">
        必填欄位*
      </div>
      <div class="col-sm-10  text-center fs-4">
        請輸入你的支出
      </div>
    </div>
    {{> message}}
    <div class="row mb-3">
      <label for="name" class="col-sm-2 col-form-label">名稱*</label>
      <div class="col-sm-10">
        <input type="text" placeholder="名稱" name="name" value="{{name}}" class="form-control" id="name">
      </div>
    </div>
    <div class="row mb-3">
      <label for="date" class="col-sm-2 col-form-label">日期*</label>
      <div class="col-sm-10">
        <input type="date" placeholder="日期" name="date" value="{{date}}" class="form-control" id="date">
      </div>
    </div>
    <div class="row mb-3">
      <label for="categoryId" class="col-sm-2 form-label">類別*</label>
      <div class="col-sm-10">
        <select id="categoryId" name="categoryId" class="form-select">
          {{#each categories}}
          <option value="{{this._id}}"></i>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <label for="amount" class="col-sm-2 col-form-label">金額*</label>
      <div class="col-sm-10">
        <input type="number" placeholder="金額" name="amount" value="{{amount}}" class="form-control" id="amount">
      </div>
    </div>
    <div class="text-center">
      <button type="submit" class="create-button">新增支出</button>
    </div>
  </form>
</div>