<div class="index-container">
  <div class="row">
    <!-- select -->
    <select class="form-select form-select-lg d-flex " aria-label=".form-select-lg example">
      <option selected>類別</option>
      <option value="家居物業">家居物業</option>
      <option value="交通出行">交通出行</option>
      <option value="休閒娛樂">休閒娛樂</option>
      <option value="餐飲食品">餐飲食品</option>
      <option value="其他">其他</option>
    </select>
    <div class="d-flex justify-content-between mt-5">
      <div class="" style="font-size: 25px;">
        總金額：
      </div>
      <div class="" style="font-size: 90px; font-weight:bold; color:#EC673E">
        {{totalAmount}}
      </div>
    </div>
    <!-- list -->
    <ul>
      {{#each record}}
      <li class="me-0 d-flex">
        <a href="./record/{{this._id}}" class="col-12 text-decoration-none">
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <i class="{{this.icon}} fa-xl index-icon m-2"></i>
              <div class="mx-2 align-self-center" style="font-size: 20px; color:#000">
                <span class="index-info-block">
                  {{this.name}}
                </span>
                <span class="index-info-block">
                  {{this.date}}
                </span>
              </div>
            </div>
            <div class="m-2 p-2 text-dark">{{this.amount}}</div>
          </div>
        </a>
        <div class="col-4 text-center align-self-center">
          <a href="./record/{{this._id}}/edit" class="btn btn-link p-2 text-dark text-decoration-none">修改</a>
          <a href="./record/{{this._id}}?_method=DELETE" class="btn btn-link p-2 text-dark text-decoration-none">刪除</a>
        </div>
      </li>
      {{/each}}
    </ul>
    <!-- create button -->
    <a href="/record/new" class="col-4 create-button">
      新增支出
    </a>
  </div>

</div>